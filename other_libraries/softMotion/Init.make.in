prefix=		@prefix@
exec_prefix=	@exec_prefix@
abs_srcdir=	@abs_srcdir@

BINDIR= 	@bindir@
LIBDIR= 	@libdir@
DATADIR=	@datadir@
INCLUDEDIR=	@includedir@/softMotion
PKGCONFIGDIR=   @libdir@/pkgconfig
MODULESDIR=	@libdir@/softMotion
SOFTMOTION_VERSION=	@VERSION@
# installation directory for tcl files
TCL_FILES_DIR=	@datadir@/softMotion

CC=		@CC@
SWIG=		swig
SWIG_TYPEMAP=	-I/usr/share/swig/1.3.31/tcl/typemaps.i
MKDEP=		@MKDEP@
MKINSTALLDIRS=	$(SHELL) $(abs_srcdir)/mkinstalldirs

#CPPFLAGS= 	-I$(GDHE_CLIENT_SRC) -I$(GDHE_TOGL_SRC)
CFLAGS=		-std=c99 -lstdc++


LIBTOOL=	@LIBTOOL@
LTCC=		$(LIBTOOL) --mode=compile $(CC)
LTLD=		$(LIBTOOL) --mode=link $(CC)
LTLDPURE=	$(LIBTOOL) --mode=link purify $(CC)

# Tcl/Tk
TCL_CC=			@TCL_CC@
TCL_CPPFLAGS=		@TCL_CPPFLAGS@
TCL_LDFLAGS=		@TCL_LDFLAGS@
TCL_LIBS=		@TCL_LIB_SPEC@ @TK_LIB_SPEC@
TCL_LIBDIR=		@LIB_RUNTIME_DIR@
TCL_LIB_FLAGS=		@TCL_LIB_FLAGS@
TCL_DBGX=		@TCL_DBGX@
TCL_SHLIB_CFLAGS=	@TCL_SHLIB_CFLAGS@
TCL_SHLIB_LDFLAGS=	@TCL_SHLIB_LDFLAGS@
TCL_SHLIB_SUFFIX=	@TCL_SHLIB_SUFFIX@
TCL_SHLIB_LD=		@TCL_SHLIB_LD@

# Other libs
LIBS=			@LIBS@  -lstdc

# Math lib
LIBM=			-lm

# GDHE lib
LIBOSFTMOTION=	 		-lsoftMotion

# Source directories
#GB_TCL_SRC=		$(top_srcdir)/srcTcl

MAJOR=0
MINOR=0
TINY=0
