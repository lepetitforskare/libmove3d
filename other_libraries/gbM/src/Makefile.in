# Makefile for gdhe
#
top_srcdir=	@top_srcdir@
top_builddir=	@top_builddir@
include ../Init.make

INSTALL=		@INSTALL@
INSTALL_PROGRAM=	@INSTALL_PROGRAM@

CPPFLAGS+= -I.. @TCL_CPPFLAGS@

vpath %.c ${top_srcdir}/src

# les entetes
HEADERS_= Proto_gb.h gb.h Proto_gbModeles.h gbStruct.h gbGENOM.h
HEADERS= $(HEADERS_:%=${abs_srcdir}/src/%)

# les sources
SRCS = gb.c gbModeles.c

OBJS = $(SRCS:%.c=%.lo)

# La librairie:
GB_LIB = libgb.la

all:	$(GB_LIB)

# Edition de liens
$(GB_LIB): $(OBJS) 
	$(LTLD) -o $@ -rpath $(LIBDIR) \
	--version-info $(MAJOR):$(MINOR):$(TINY) $(OBJS)

%.lo:	%.c
	$(LIBTOOL) --mode=compile $(CC) -c $(CPPFLAGS) $(CFLAGS) -o $@ $<

#%.lo: %.c
#	$(LTCC) $(CPPFLAGS) $(CFLAGS) -c $< 


install:: $(GB_LIB)
	$(MKINSTALLDIRS) $(LIBDIR)
	$(LIBTOOL) --mode=install $(INSTALL) $(GB_LIB) $(LIBDIR)


install:: $(HEADERS)
	$(MKINSTALLDIRS) $(INCLUDEDIR)
	@for f in $(HEADERS); do \
		echo "installing $$f"; \
		$(INSTALL) -m 664 $(srcdir)/$$f $(INCLUDEDIR) ; \
	done

clean:
	$(LIBTOOL) --mode=clean rm -f $(OBJS) $(PROG)
	rm -f $(PKG_OBJS) $(PKG)

distclean: clean
	rm -f Makefile DEPENDANCES

ifeq ($(findstring $(MAKECMDGOALS),clean),)
depend DEPENDANCES: $(SRCS)
	$(MKDEP) -c$(CC) -oDEPENDANCES -t.lo $(CPPFLAGS) $?

include DEPENDANCES
endif
