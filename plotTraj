set key top left
set title "Energy profile along the trajectory"
set xlabel "Step along the trajectory"
set ylabel "Energy"
plot "traj_statistics.txt" using 1:2 with lines title "Before minim"
replot "traj_statistics.txt" using 1:3 with lines title "After minim"

set data style lines
set pointsize 1
#set data style points


set terminal png
set output "traj_statistics.png"
replot
print "traj_statistics.png generated"

# The EPS picture is not actually saved
# but we need it in order to force the 
# gnuplot to save the previous one (ie. the png)
set terminal postscript eps color
set output "traj_statistics.eps"
replot

set terminal x11
replot

!rm -f traj_statistics.eps

pause mouse
